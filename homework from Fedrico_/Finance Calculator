

def calculate(income: float, tax_rate: float, m_or_y: str, monthly_out: float) -> None:
    if m_or_y == "m":
        monthly_income: float = income
        yearly_income: float = income * 12
    else:
        yearly_income: float = income
        monthly_income: float = income / 12

    monthly_taxes: float = monthly_income * (tax_rate/100)
    monthly_net_income: float = monthly_income - monthly_taxes
    monthly_net: float = monthly_net_income - monthly_out
    yearly_taxes: float = yearly_income * (tax_rate/100)
    yearly_net_income: float = yearly_income - yearly_taxes
    yearly_net: float = yearly_net_income - (monthly_out*12)

    print()
    print("SUMMARY".center(80, "="))
    print(f"Your monthly income is: {monthly_income:,.2f}")
    print(f"Your monthly income after taxes is: {monthly_net_income:,.2f}")
    print(f"Your monthly income after taxes and expenses is: {monthly_net:,.2f}")
    print(f"Your yearly income is: {yearly_income:,.2f}")
    print(f"Your yearly income after taxes is: {yearly_net_income:,.2f}")
    print(f"Your yearly income after taxes and expenses is: {yearly_net:,.2f}")
    print("".center(80, "="))


def main() -> None:
    print("Hello, today we are gonna calculate your monthly and yearly income.")

    while True:
        m_or_y: str = input("Do you get paid monthly or yearly? (m/y) ").lower()
        if m_or_y in ["m", "y"]:
            break
        else:
            print("Please enter m or y.")

    while True:
        try:
            income: float = float(input("How much do you get paid (without taxes)? "))
            tax_rate: float = float(input("Please enter your tax rate: "))
            break

        except ValueError:
            print("Please enter only numbers.")

    print("Now, let's calculate your expenses.")

    while True:
        try:
            monthly_out: float = float(input("Please input your total monthly expenses. (rent/bills/insurance/GYM/online subscription/hobbies/entertainment and other things) "))
            break
        except ValueError:
            print("Please enter only numbers.")

    calculate(income, tax_rate, m_or_y, monthly_out)


if __name__ == "__main__":
    main()
    input("Press enter to quit...")
    quit()
